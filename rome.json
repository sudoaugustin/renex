{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useKeyWithClickEvents": "off"
      }
    },
    "ignore": [
      "tsc",
      "esm",
      "cjs",
      "/node_modules"
    ]
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 140,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}