{
  "name": "renex",
  "author": "https://github.com/sudoaugustin",
  "version": "0.2.0",
  "license": "MIT",
  "description": "Useful react components that will save your day",
  "main": "cjs/src/index.js",
  "types": "esm/src/index.d.ts",
  "module": "esm/src/index.js",
  "sideEffects": false,
  "files": [
    "cjs",
    "esm",
    "types"
  ],
  "keywords": [
    "react",
    "hooks",
    "components",
    "memo",
    "state",
    "effect"
  ],
  "scripts": {
    "test": "jest",
    "build": "rm -rf cjs esm && yarn build:esm && yarn build:cjs",
    "build:esm": "tsc -p tsconfig.build.json --outDir ./esm && esbuild src/*.tsx hooks/*.ts utils/*ts --format=esm --outdir=./esm",
    "build:cjs": "tsc -p tsconfig.build.json --outDir ./cjs && esbuild src/*.tsx hooks/*.ts utils/*ts --format=cjs --outdir=./cjs",
    "prepare": "husky install"
  },
  "bugs": {
    "url": "https://github.com/sudoaugustin/renex/issues"
  },
  "homepage": "https://github.com/sudoaugustin/renex#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sudoaugustin/renex"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.20.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.4.0",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "esbuild": "^0.17.5",
    "esbuild-jest": "^0.5.0",
    "husky": "^8.0.0",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rome": "^11.0.0",
    "typescript": "^4.9.5"
  },
  "peerDependencies": {
    "react": "^16.8.0  || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0  || ^17.0.0 || ^18.0.0"
  }
}